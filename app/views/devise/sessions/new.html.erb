<div class= "singUp">
  <div class="singTitle">
    <h2 class="postText">Log in</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'singUpForm' }) do |f| %>
    <div class="imputField">
      <%= f.label :email, class: "imputFieldDesc" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="imputField">
      <%= f.label :password, class: "imputFieldDesc" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="rememberMe">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
