<main>
  <div class="card">
    <h1><%= @user.name %></h1>
    <h3>Number of posts: <%= @user.posts_counter %></h3>
  </div>
  <div>
    <ul>
      <% @posts.each do |post| %>
        <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
        <div class="postContainer">
          <li class="postCont">
            <div class="post"> 
              <h2 class="postTitle"><%= post.title %></h2>
              <h4 class="postText"><%= post.text %></h4>
              <div class="postCounters">
                <p class="countText"> Comments: <%= post.comments_counter %> - Likes: <%= post.likes_counter %></p>
              </div>
            </div>
          </li>
          <div class="postCont">
            <h3>Comments:</h3>
            <ul>
              <% if post.recent_comments.any? %>
                <% post.recent_comments.each do |comment| %>
                  <li>
                    <p class="commentText"><%= comment.author.name %> : <%= comment.text %></p>
                  </li>
                <% end %>
              <% else %>
                <li>
                  <p class="commentText">No comments yet.</p>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <% end %>
      <% end %>
    </ul>
  </div>
</main>
