<main>
  <div class="card">
    <h1><%= @user.name %></h1>
    <h3>Number of posts: <%= @user.posts_counter %></h3>
  </div>
  <div>
    <ul>
      <% @posts.each do |post| %>
        <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
        <div class="postContainer">
          <li class="postCont">
            <div class="post"> 
              <h2 class="postTitle"><%= post.title %></h2>
              <h4 class="postText"><%= post.text %></h4>
              <div class="postCounters">
                <p class="countText"> Comments: <%= post.comments_counter %> - Likes: <%= post.likes_counter %></p>
              </div>
            </div>
          </li>
          <div class="postCont">
              <h3>Comments:</h3>
              <ul>
                <li>
                  <% recent_comments = post.comments.last %>
                  <% if recent_comments %>
                    <p class="commentText"> <%= recent_comments.author.name %> : <%= recent_comments.text %> </p>
                  <% else %>
                    <p class="commentText"> No comments yet. </p>
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      <% end %>
    </ul>
  </div>
</main>
